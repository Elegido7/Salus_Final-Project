doctype html
html
  head
    title Patient Access
  body
    h1 Available Doctors for Consultation
    ul
      each doctor in doctors
        li #{doctor.name} - #{doctor.title}

    h3 Register as a New Patient
    form(action="/patient/register" method="POST")
      input(type="text" name="fullName" placeholder="Full Name" required)
      input(type="text" name="contactNumber" placeholder="Contact Number" required)
      input(type="text" name="nationalId" placeholder="National ID" required)
      input(type="text" name="homeLocation" placeholder="Home Location" required)
      input(type="text" name="nearestHealthFacility" placeholder="Nearest Health Facility" required)
      textarea(name="symptoms" placeholder="Describe your symptoms")
      button(type="submit") Register
